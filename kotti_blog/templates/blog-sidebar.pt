<div class="blog-sidebar">
  <div class="categories">
    <h5><tal:block i18n:translate="">Categories</tal:block>:</h5>

    <ul>
      <li tal:repeat="tag unique_tags">
        <a href="${blog_url}?selected-tag=${tag}">${tag}</a>
      </li>
    </ul>
  </div>

  <div class="archive">
    <h5><tal:block i18n:translate="">Archives</tal:block>:</h5>

    <ul>
      <li tal:repeat="date dates">
        <a href="${blog_url}?selected-date=${date.year}_${date.month}">${api.format_date(date, 'MMMM yyyy')}</a>
      </li>
    </ul>
  </div>
</div>

